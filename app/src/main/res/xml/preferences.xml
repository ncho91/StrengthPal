<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Personal Info"
        android:key="pref_personal_info">
        <Preference
            android:key="btnDateFilter"
            android:title="Birthday"/>
        <EditTextPreference
            android:key="height"
            android:title="Height"
            android:inputType="number"/>
        <EditTextPreference
            android:key="weight"
            android:title="Weight"
            android:inputType="number"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="App Settings"
        android:key="pref_app">
        <SwitchPreference
            android:title="Push Notifications"
            android:defaultValue="false"
            android:summary="We'll let you know if you should be in the gym!"
            android:key="enable_push"/>
        <ListPreference
            android:title="Units"
            android:key="units"
            android:entries="@array/units"
            android:entryValues="@array/units"/>

    </PreferenceCategory>
</PreferenceScreen>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/txtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="32dp"
                android:text="StrengthPal"
                android:textStyle="bold"
                android:typeface="sans"
                android:phoneNumber="false" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtLabel"
                android:src="@drawable/dumbbell"
                android:id="@+id/dumbbell_icon"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/creatorBlock"
                android:layout_below="@+id/dumbbell_icon"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/tyler"
                    android:contentDescription='"pic of Tyler"' />

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/noah" />

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/even" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/about_info"
                android:id="@+id/textView"
                android:layout_below="@+id/creatorBlock"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"
                android:layout_margin="10dp"
                android:typeface="sans"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icons by Icon8"
                android:id="@+id/button"
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignEnd="@+id/textView"
                android:drawableLeft="@drawable/ic_cup"
                android:drawableRight="@drawable/ic_cup"
                android:background="#ff2ecc71"
                android:typeface="sans"
                android:onClick="icons8site"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Play Services Licensing"
                android:id="@+id/button_gps_licence"
                android:layout_below="@+id/button"
                android:layout_alignLeft="@+id/button"
                android:layout_alignStart="@+id/button"
                android:layout_alignRight="@+id/button"
                android:layout_alignEnd="@+id/button"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_legal"
                android:drawableRight="@drawable/ic_legal"
                android:background="#bf5300"
                android:typeface="sans"
                android:onClick="gpsLink"/>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
